# Docker Registry Configuration
REGISTRY=ghcr.io
IMAGE_PREFIX=your-org/urban-company
VERSION=latest

# Service Ports
DISCOVERY_PORT=8761
API_GATEWAY_PORT=8080
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Database Configuration
# User Service Database
USER_DB_URL=jdbc:postgresql://your-rds-endpoint:5432/user_service_db
USER_DB_USERNAME=user_service
USER_DB_PASSWORD=change-me-in-production

# Booking Service Database
BOOKING_DB_URL=jdbc:postgresql://your-rds-endpoint:5432/booking_service_db
BOOKING_DB_USERNAME=booking_service
BOOKING_DB_PASSWORD=change-me-in-production

# Payment Service Database
PAYMENT_DB_URL=jdbc:postgresql://your-rds-endpoint:5432/payment_service_db
PAYMENT_DB_USERNAME=payment_service
PAYMENT_DB_PASSWORD=change-me-in-production

# Partner Service Database (PostGIS enabled)
PARTNER_DB_URL=jdbc:postgresql://your-rds-endpoint:5432/partner_service_db
PARTNER_DB_USERNAME=partner_service
PARTNER_DB_PASSWORD=change-me-in-production

# Catalog Service Database
CATALOG_DB_URL=jdbc:postgresql://your-rds-endpoint:5432/catalog_service_db
CATALOG_DB_USERNAME=catalog_service
CATALOG_DB_PASSWORD=change-me-in-production

# Redis Configuration
REDIS_HOST=your-elasticache-endpoint
REDIS_PORT=6379
REDIS_PASSWORD=change-me-in-production

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=your-msk-broker-1:9092,your-msk-broker-2:9092,your-msk-broker-3:9092

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-256-bits-long-change-in-production

# Payment Gateway Configuration
# Stripe
STRIPE_API_KEY=sk_live_your_stripe_api_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Razorpay
RAZORPAY_API_KEY=your_razorpay_key_id
RAZORPAY_API_SECRET=your_razorpay_key_secret

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# S3 Configuration
S3_BUCKET_NAME=urban-company-prod-assets
S3_CLOUDFRONT_DOMAIN=dxxxxxxxxxxxxx.cloudfront.net

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me-in-production

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@urbancompany.com

# SMS Configuration (Twilio example)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Application URLs
APP_URL=https://urbancompany.com
API_URL=https://api.urbancompany.com
ADMIN_URL=https://admin.urbancompany.com

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PAYMENTS=true
ENABLE_NOTIFICATIONS=true
ENABLE_PARTNER_VERIFICATION=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# Security
CORS_ALLOWED_ORIGINS=https://urbancompany.com,https://www.urbancompany.com
CSRF_ENABLED=true
SSL_ENABLED=true

# Session Configuration
SESSION_TIMEOUT=3600
REMEMBER_ME_TIMEOUT=2592000

# File Upload Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Configuration
CACHE_TTL=3600
CACHE_ENABLED=true

# Background Jobs
ENABLE_CRON_JOBS=true
BOOKING_REMINDER_CRON=0 */15 * * * *
CLEANUP_JOBS_CRON=0 2 * * *

# Metrics & Monitoring
PROMETHEUS_ENABLED=true
METRICS_EXPORT_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Environment
ENVIRONMENT=production
